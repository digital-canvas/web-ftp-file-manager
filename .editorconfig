# This file is for unifying the coding style for different editors and IDEs
# editorconfig.org

root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_size = 4
indent_style = space

# Spaces in coffee
[**.coffee]
indent_style = space
indent_size = 2

[**.{js,vue}]
indent_style = space
indent_size = 4

# Tabs in less
[**.{less,scss,css}]
indent_style = tab
indent_size = 2

[**.php]
indent_style = space
indent_size = 4

[**.{html,phtml,twig,tpl}]
indent_style = tab
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
